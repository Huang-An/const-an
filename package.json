{
  "name": "root",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "build": "node scripts/build.js -m production"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.27.0",
    "execa": "^5.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "minimist": "^1.2.5",
    "prettier": "~2.3.0",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {}
}
